<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogIn"
    android:id="@+id/r1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:background="@drawable/background_gradient"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="175dp" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="185dp"
        android:id="@+id/layoutInput"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rec_gradient_exit"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic_action_user"
            android:hint="Email"
            android:layout_width="230dp"
            android:layout_height="33dp"
            android:id="@+id/editText_email"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_text_background"
            android:backgroundTint="@color/colorGrey"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"/>

        <EditText
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic_action_pass"
            android:hint="Password"
            android:layout_width="230dp"
            android:layout_height="33dp"
            android:id="@+id/editText_password"
            android:inputType="textPassword"
            android:textColor="@color/colorBlack"
            android:background="@drawable/edit_text_background"
            android:backgroundTint="@color/colorGrey"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:outlineAmbientShadowColor="@color/colorYellow"
            android:outlineSpotShadowColor="@color/colorYellow"
            android:id="@+id/sign_in_progressBar"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>
        <Button
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/colorYellow"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:text="LOG IN"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/button_sig_in"/>
        <Button
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/colorYellow"
            android:layout_marginTop="12dp"
            android:textAllCaps="false"
            android:text="EXIT"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/exit"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageVIew"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:padding="3dp"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <TextView
        android:id="@+id/head1"
        android:textSize="18sp"
        android:textColor="#FFF"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageVIew"
        android:text="BUITEMS SMART ATTENDANCE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/head2"
        android:textSize="18sp"
        android:textColor="#FFF"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/head1"
        android:text="SYSTEM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not registered?"
        android:layout_marginStart="38dp"
        android:textSize="14dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/notregis"
        android:textColor="@color/colorBlack"/>
    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Administration"
        android:textColor="@color/colorYellow"
        android:textSize="14dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/notregis"
        android:layout_marginStart="3dp"
        android:clickable="true"/>

</RelativeLayout>